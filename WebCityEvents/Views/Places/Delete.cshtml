@model WebCityEvents.ViewModels.PlaceViewModel

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить это место?</h3>
<div>
    <h4>Место</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Название места</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlaceName)
        </dd>
        <dt class="col-sm-2">
            <strong>Геолокация</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Geolocation)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PlaceID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>