@model IEnumerable<WebCityEvents.ViewModels.Users.UserViewModel>

@{
    ViewData["Title"] = "Список пользователей";
}

<h2>Список пользователей</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать нового пользователя</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Дата регистрации</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                <td>@user.RoleName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    @if (user.RoleName == "user")
                    {
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этого пользователя?');">
                                Удалить
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>