@model WebCityEvents.ViewModels.CustomerViewModel

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Заказчик</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>ФИО</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            <strong>Данные паспорта</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassportData)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CustomerID">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>