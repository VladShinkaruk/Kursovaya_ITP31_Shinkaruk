@model WebCityEvents.ViewModels.TicketOrderViewModel

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали заказа</h1>

<div>
    <h4>Заказ билетов</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Дата заказа</dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">Количество билетов</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketCount)
        </dd>
        <dt class="col-sm-2">Название мероприятия</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">ФИО заказчика</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderID">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>